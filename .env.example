# Variables de entorno para Docker Compose
# Copia este archivo a .env y modifica los valores seg√∫n tus necesidades

# ======================
# MYSQL
# ======================
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_USER=naranjax_user
MYSQL_PASSWORD=naranjax_pass

# ======================
# MONGODB
# ======================
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=adminpass

# ======================
# JWT
# ======================
JWT_SECRET=naranjax-secret-key-change-in-production-minimum-256-bits-required
JWT_EXPIRATION=900000
JWT_REFRESH_EXPIRATION=604800000

# ======================
# EMAIL (para Notification Service)
# ======================
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ======================
# KAFKA
# ======================
KAFKA_ADVERTISED_HOST_NAME=localhost
